<?xml version="1.0" encoding="UTF-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size android:width="40dp" android:height="30dp" />
            <gradient android:startColor="#1f1f1f" android:endColor="#1f1f1f" android:angle="270" />
            <stroke android:width="1dp" android:color="#1f1f1f" />
            <corners android:radius="2dp" />
                         
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <size android:width="40dp" android:height="30dp" />
            <gradient android:startColor="#1f1f1f" android:endColor="#1f1f1f" android:angle="270" />
            <stroke android:width="1dp" android:color="#1f1f1f" />
            <corners android:radius="2dp" />
             
        </shape>
    </item>
    <item>
        <shape>
            <size android:width="40dp" android:height="30dp" />
            <gradient android:startColor="#272727" android:endColor="#272727" android:angle="270" />
            <stroke android:width="1dp" android:color="#272727" />
            <corners android:radius="2dp" />
                  
        </shape>
    </item>
</selector>