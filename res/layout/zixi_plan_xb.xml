<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:umadsdk="http://schemas.android.com/apk/res/com.LoveBus"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_tab"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="点击查看" />

    <Gallery
        android:id="@+id/gallery_xb"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="41dp"
        android:background="@drawable/top"
        android:gravity="center"
        android:spacing="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/plan_pic1" />

    <TextView
        android:id="@+id/textView_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gallery_xb"
        android:layout_alignLeft="@+id/textView3"
        android:paddingLeft="15sp"
        android:text="我们做朋友吧"
        android:textColor="@color/text_gray"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_style"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/imageView2"
        android:paddingLeft="10sp"
        android:text="学 霸"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#8b8989"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gallery_xb"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/bt_add"
        android:text="不同等级自习计划 "
        android:textSize="15sp" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_marginRight="18dp"
        android:background="@drawable/plan_add_pic"/>

</RelativeLayout>