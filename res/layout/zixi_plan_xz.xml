<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:umadsdk="http://schemas.android.com/apk/res/com.LoveBus"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_tab"
    android:orientation="vertical" >

    <Gallery
        android:id="@+id/gallery_xz"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="41dp"
        android:background="@drawable/top"
        android:gravity="center"
        android:spacing="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/plan_pic1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignRight="@+id/textView_style"
        android:layout_marginBottom="15dp"
        android:paddingLeft="12sp"
        android:text="亲爱的"
        android:textColor="@color/text_gray"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/imageView2"
        android:paddingLeft="5sp"
        android:text="那什么拯救你"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:text="学渣"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#8b8989"
        android:textSize="50sp" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView2"
        android:layout_below="@+id/gallery_xz"
        android:layout_marginRight="24dp"
        android:background="@drawable/plan_add_pic"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_add"
        android:layout_toRightOf="@+id/bt_add"
        android:text="点击图片查看" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/bt_add"
        android:text="不同等级自习计划 "
        android:textSize="15sp" />

</RelativeLayout>