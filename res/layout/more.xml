<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:background="@drawable/actionbar" >

        <TextView
            android:id="@+id/textView_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="设置"
            android:textColor="@color/text_title"
            android:textSize="24sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1"
        android:background="@drawable/bg_tab" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="490dp" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="284dp"
                android:layout_height="90dp"
                android:layout_below="@+id/button_userinfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button_zixi_add"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/zuhe_button_top"
                    android:gravity="center|left"
                    android:text="   关于我们"
                    android:textColor="@drawable/selector_button_color"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/zhuce_button_bottom"
                    android:gravity="center|left"
                    android:text="   软件介绍"
                    android:textColor="@drawable/selector_button_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_alignLeft="@+id/linearLayout1"
                android:layout_alignRight="@+id/linearLayout1"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginTop="24dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/zuhe_button_top"
                    android:text="@string/logout"
                    android:textColor="@drawable/selector_button_color"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/zhuce_button_bottom"
                    android:text="@string/exit"
                    android:textColor="@drawable/selector_button_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button_userinfo"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignLeft="@+id/linearLayout1"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout1"
                android:layout_marginTop="22dp"
                android:background="@drawable/button"
                android:gravity="center|left"
                android:text="   我的资料"
                android:textColor="@drawable/selector_button_color"
                android:textSize="16sp" />

        </RelativeLayout>
    </ScrollView>

    </LinearLayout>
